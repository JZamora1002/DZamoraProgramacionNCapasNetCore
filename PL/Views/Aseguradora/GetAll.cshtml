@model ML.Aseguradora
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>GetAll</h2>
    <p></p>

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("+", "Form", "Aseguradora", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <hr />
    <hr />
    <div class="row d-flex justify-content-center">
        <table class="table table-dark table-hover table-striped table-bordered table-responsive">
            <thead class="thead thead-inverse">
                <tr class="table table-secondary">

                    <th> EDITAR </th>
                    <th class="hidden">ID</th>
                    <th align="center">NOMBRE</th>
                    <th align="center">FECHA DE CREACION</th>
                    <th align="center">FECHA DE MODIFICACION</th>
                    <th align="center">USUARIO</th>
                    
                    <th> ELIMINAR </th>
                </tr>
            </thead>

            <tbody>
                @foreach (ML.Aseguradora aseguradora in Model.Aseguradoras)
                {

                    <tr>
                        <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora})"></a></td>

                        <td class="hidden">@aseguradora.IdAseguradora</td>
                        <td align="center">@aseguradora.Nombre</td>
                        <td align="center">@aseguradora.FechaCreacion</td>
                        <td align="center">@aseguradora.FechaModificacion</td>
                        <td align="center">@aseguradora.Usuario.Nombre @aseguradora.Usuario.ApellidoPaterno @aseguradora.Usuario.ApellidoMaterno</td>

                        <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" type="submit"></a></td>



                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

